.col-md-3
  = simple_form_for @subscription |f| do
    .plan-block
      - if plan.name == 'growth'
        .plan-popular
          .text-center
            p Most popular
      .plan-header class="#{plan.name}"
        .text-center
          p
            = plan.name.upcase
      .plan-content
        .plan-price
          h2.text-center
            = "$#{plan.price}"
          h4.text-center per month
        hr
        p.text-center
          = "#{plan.response_limit > 0 ? plan.response_limit : 'Unlimited'} responses"
        hr
        p.text-center
          = "#{plan.survey_limit > 0 ? plan.survey_limit : 'Unlimited'} surveys"
        hr
        p.text-center Instant notifications
        hr
        = f.hidden_field :plan_id, value: plan.id
        = f.hidden_field :user_id, value: current_user.id
        script.stripe-button[src="https://checkout.stripe.com/checkout.js" data-key="#{ENV['STRIPE_PUBLIC_KEY']}" data-description="New users are charged after 7 days" data-name="#{plan.name.upcase}" data-label="#{subscribe_button_text(current_user, plan.name)}" data-panel-label="#{subscribe_button_text(current_user, plan.name)}"]