<div id="edit_profile">

    <div class="header">
      <h4 class="pull-left">Account</h4>
      <div class="pull-right">
          <%= link_to 'Settings', edit_user_registration_path, class: 'btn btn-default active' %>
          <%= link_to 'Billing', account_billing_path, class: 'btn btn-default' %>
      </div>
    </div>

    <div class="clearfix"></div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name, autofocus: true, label: 'Full Name' %>
        <%= f.input :email, autofocus: true %>
        <%= f.input :project_title, autofocus: true, label: 'Company', autocomplete: :off %>
        <%= f.input :password, placeholder: 'password', required: false, label: 'Change Password', autocomplete: :off, input_html: { value: '' } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, 'Save Changes', class: 'pull-left' %>
        <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-default' %>
      </div>
    <% end %>
</div>