<div id="edit_profile">

    <%= render 'layouts/account_navigation' %>

    <div class="clearfix"></div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name, autofocus: true, label: 'Full Name' %>
        <%= f.input :email, autofocus: true %>
        <%= f.input :project_title, autofocus: true, label: 'Company', autocomplete: :off %>
        <%= f.input :password, placeholder: 'password', required: false, label: 'Change Password', autocomplete: :off, input_html: { value: '' } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, 'Save Changes', class: 'pull-left' %>
        <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-default' %>
      </div>
      <% unless current_user.active? %>
        <br/>
        <hr/>
        <br/>
        <%= link_to 'Cancel Subscription', account_cancel_popup_path(@survey), class:'grey-button delete', remote: true %>
      <% end %>

    <% end %>
</div>