#landing_page
  .landing-page-block
    h3.text-center
      = @landingPage.headline
    p.text-center
      = @landingPage.subtitle
    hr
    = simple_form_for(@comment, html: {id: 'newCommentForm'}) do |f|
      = f.input :email, label: 'Your email', placeholder: 'yourname@domain.com'
      - if @landingPage.comment_enabled?
        = f.input :content, label: 'Comments', placeholder: 'Please leave your commentsâ€¦'
      .form-actions.text-center
        = f.button :submit, 'Finish and send', class: 'btn btn-default'